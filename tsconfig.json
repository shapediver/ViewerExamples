{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "target": "es5",
        "strict": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "__tests__/**/*",
        "node_modules/**/*",
        "dist",
        "dist-dev",
        "dist-prod"
    ]
}